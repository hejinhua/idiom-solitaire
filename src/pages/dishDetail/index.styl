.wrapper {
  width: 100vw;
  background-color: #F5F5F5;
  color: #323334;
  font-size: 28px;
  line-height: 64px;
}
.name-wrapper {
  background-color: #fff;  
  padding: 18px 36px 34px 36px;
}
.dish-name {
  font-size: 40px;
  line-height: 56px;
  margin-bottom: 14px;
}
.dish-desc {
  font-size: 28px;
  line-height: 44px;
}
.special {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 12px;  
  font-weight: bold;
}
.footer {
  position: sticky;
  left: 0;
  bottom: 0;
  height: 120px;
  width: 100%;
  background-color: #fff;  
  display: flex;
  align-items: center;
  padding: 10px 12px 35px 12px;
  box-sizing: border-box;
  margin-top: 18px;
}
.service {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333;
  font-size: 22px;
  line-height: 36px;
  margin: 0 22px;
}
.service-icon {
  width: 48px;
  height: 40px;
  margin-bottom: 4px;  
}
.table-header {
  background-color: #EBEBEB;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: flex-end
  padding: 15px 12px;
  text-align: center;
  white-space: nowrap;
}
.w75 {
  width: 150px;  
}
.w60 {
  width: 120px;  
}
.w270 {
  width: 540px;
}
.table-row {
  display: flex;
  align-items: center;
  padding: 20px 12px;
  text-align: center;
  white-space: pre-wrap;
  flex-wrap: wrap;
  border-left: 1px solid #E6E6E6;
  border-right: 1px solid #E6E6E6;
  border-bottom: 1px solid #E6E6E6;
}
.border-r {
  // border-right: 1px solid #E6E6E6;
}
.link {
  color: #E55353;
  text-decoration: underline;  
}
.stepImg {
  background-color: #f5f5f5;
  width: 100%;
  height: 368px;
  border-radius: 4px;
}
.relation-view {
  height: 300px;
  white-space: nowrap;
  display: flex;
}
.relation-item {
  width: 218px;
  height: 100%;
  margin-right: 9px;
}
.relation-img {
  width: 218px;
  height: 218px;
  border-radius: 4px;
  background-color: #f5f5f5;
}
.relation-text {
  text-align: center;
  line-height: 60px;  
  display: block;
}
  