.wrapper {
  width: 100vw;
  // height: 100vh;
  background-color: #F5F5F5;
}
.bg {
  width: 100%;
  height: 625px;
  background-color: #FF4D4D;
}
.form {
  width: calc(100% - 30px);
  position: absolute;
  left: 0;
  top: 339px;
  margin: 0 15px 15px 15px;
  box-sizing: border-box
  background-color: #fff;
  border-radius: 30px;
  box-shadow: 0 2px 15px rgba(172, 172, 172, 0.5);
  padding: 93px 40px;
  box-sizing: border-box;
}
.title {
  color: #333;
  font-weight: bold;
  position: relative;
  padding-left: 10px;
  margin-bottom: 24px;
}
.title:before {
  content: '';
  width: 6px;
  height: 33px;
  background-color: #D73434;
  position: absolute;
  top: 5px;
  left: -6px;
}
.input-wrapper {
  display: flex;
  align-items: center;
  height: 90px;
  border: 2px solid #eee;
  border-radius: 45px;
  margin-bottom: 32px;
  font-size: 32px;
}
.label {
  color: #333;
  padding-inline: 16px;
  padding-right: 25px;
  padding-left: 26px;
  position: relative;
  width: 130px;
}
.require:before {
  content: '*';
  color: #D73434;
  position: absolute;
  top: 5px;
  left: 8px;
}
.input {
  flex-grow: 1;  
  color: #BCBCBC;
}
.login-btn {
  margin-top: 100px;
  height: 110px;
  font-size: 40px;
  color: #fff;
  text-align: center;
  line-height: 110px;
  background-image: linear-gradient(to right, #FF5968 , #FF4040);
  border-radius: 55px;
}
