.wrapper {
  width: 100vw;
  // height: 100vh;
  background-color: #F5F5F5;
}
.bg {
  width: 100%;
  height: 625px;
  background: url('../../assets/images/login-bg.png') no-repeat;
  background-size: 100% 100%;
  display: flex;
  box-sizing: border-box;
  padding-top: 167px;
}
.logo {
  width: 106px;
  height: 153px;
  margin-left: 52px;  
}
.logo-text {
  color: #fff;
  font-size: 52px;
  margin-left: 32px;  
}
.form {
  width: calc(100% - 30px);
  position: absolute;
  left: 0;
  top: 339px;
  margin: 0 15px 15px 15px;
  box-sizing: border-box
  background-color: #fff;
  border-radius: 30px;
  box-shadow: 0 2px 15px rgba(172, 172, 172, 0.5);
  padding: 93px 40px;
  box-sizing: border-box;
}
.title {
  color: #333;
  font-weight: bold;
  position: relative;
  padding-left: 10px;
  margin-bottom: 24px;
}
.title:before {
  content: '';
  width: 6px;
  height: 33px;
  background-color: #D73434;
  position: absolute;
  top: 5px;
  left: -6px;
}
.input-wrapper {
  display: flex;
  align-items: center;
  height: 90px;
  border: 2px solid #eee;
  border-radius: 45px;
  margin-bottom: 32px;
  font-size: 32px;
  position: relative;
}
.label {
  color: #333;
  padding-inline: 16px;
  padding-right: 25px;
  padding-left: 26px;
  position: relative;
  width: 130px;
  white-space: nowrap;
}
.require:before {
  content: '*';
  color: #D73434;
  position: absolute;
  top: 5px;
  left: 8px;
}
.input {
  flex-grow: 1;  
  color: #BCBCBC;
}
.company-list {
  position: absolute;
  top: 90px;
  left: 180px;
  width: calc(100% - 180px);
  background-color: #fff;
  border: 2px solid #eee;
  box-sizing: border-box;
  z-index 2;
}
.company-item {
  line-height: 90px;
  font-size: 32px;
  color: #BCBCBC;
  border-bottom: 2px solid #eee;
  padding: 0 20px;
}
.phone-link {
  color: #D73434;
  text-decoration: underline;  
  background-color: transparent;
  font-size: 32px;
  line-height: 90px;
  padding-left: 20px;
  padding-right: 0;
  width: 204px;
  height: 90px;
}