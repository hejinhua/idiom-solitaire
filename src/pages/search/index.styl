.search {
  width: 100vw;
  height: 100vh;
  color: #333;
  font-size: 24px;
}
.bg {
  width: 100%;
  height: 160px;
  background: url('../../assets/images/search-bg.png') no-repeat;
  background-size: 100% 100%;
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
}
.title {
  color: #fff;
  text-align: center;
  font-size: 40px;
  font-weight: bold;
}
.body {
  border-top-left-radius: 16px;  
  border-top-right-radius: 16px;  
  background-color: #fff;
  margin-top: 13px;
  padding: 16px 30px;
  box-sizing: border-box;
}
.search-wrapper {
  height: 60px;
  border-radius: 55px;  
  background-color: #F7F8FA;
  color: #BCBCBC;
  font-size: 24px;
  align-items: center;
  padding: 0 32px;
  box-sizing: border-box;
  align-items: center;
}
.search-icon {
  width: 26px;
  height: 26px;
  margin-right: 6px;
}
.search-text {
  line-height: 60px;
  padding-left: 10px;  
}
.history {
  line-height: 30px;
  margin-top: 34px;
  margin-bottom: 20px;
  font-weight: bold;
}
.history-wrapper {
  display: flex;
  flex-wrap: wrap;  
}
.history-text {
  line-height: 60px;
  padding: 0 30px;
  border-radius: 55px;
  margin-right: 8px;
  margin-bottom: 8px;
  border: 1px solid #DEDEDE;
}
.tab {
  width: 100%;
  height: 56px;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #E2E2E2;
  background-color: #fff;  
  font-weight: bold;
  line-height: 31px;
}
.active {
  color: #E55050;  
  background-color: #fff;
}
.scroll-view {
  flex-grow: 1;  
}
.active-icon {
  width: 29px;
  height: 14px;
}
.tab-item {
  align-items: center;  
}
.no-data {
  width: 437px;
  height: 254px;  
}