.wrapper {
  width: 100vw;
  height: 100vh;
  // background-color: #F5F5F5;
}
.bg {
  width: 100%;
  height: 420px;
  background-color: #FF4D4D;
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
}
.title {
  color: #fff;
  text-align: center;
  font-size: 40px;
  font-weight: bold;
}
.info-wrapper {
  align-items: center;
  color: #fff;
  margin-left: 44px;
  margin-top: 51px;
}
.face {
  background-color: #F5F5F5;
  width: 126px;
  height: 126px;
  border-radius: 50%;
  margin-right: 21px;
}
.name {
  font-size: 30px;
  line-height: 42px;  
}
.phone {
  font-size: 24px;
  line-height: 33px;  
}
.menu {
  margin: 70px 14px;
  background-color: #fff;
  border-radius: 30px;
  box-shadow: 0 2px 16px rgba(0, 0, 0, 0.17);
  padding: 38px 26px;
  box-sizing: border-box;
  color: #323334;
  font-size: 32px;
  line-height: 45px;
}
.service {
  margin-bottom: 37px;
  font-weight: bold;
}
.menu-item {
  height: 120px;
  border-bottom: 1px solid #DBDBDB;
  display: flex;
  align-items: center;
  justify-content: space-between;
}