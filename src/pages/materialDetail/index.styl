.wrapper2 {
  width: 100vw;
  background-color: #F5F5F5;
  color: #323334;
  font-size: 28px;
  line-height: 64px;
}
.name-wrapper {
  background-color: #fff;  
  padding: 18px 36px 34px 36px;
}
.dish-name {
  font-size: 40px;
  line-height: 56px;
  margin-bottom: 14px;
}
.dish-desc {
  font-size: 28px;
  line-height: 44px;
}
.special {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 12px;  
}
.footer {
  position: sticky;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;  
  padding: 10px 12px 35px 12px;
  box-sizing: border-box;
  margin-top: 18px;
}
.link {
  color: #E55353;
  text-decoration: underline;  
}
.relation-view {
  height: 300px;
  white-space: nowrap;
  display: flex;
}
.relation-item {
  width: 218px;
  height: 100%;
  margin-right: 9px;
}
.relation-img {
  width: 218px;
  height: 218px;
  border-radius: 4px;
  background-color: #f5f5f5;
}
.relation-text {
  text-align: center;
  line-height: 60px;  
  display: block;
}
.detail {
  height: 100px;
  color: #000;  
  font-weight: bold;
}
.detail-img {
  background-color: #f5f5f5;
  width: 100%;
  height: auto;
  margin: 0 14px;
  box-sizing: border-box;
}
.slash {
  width: 32px;
  height: 36px;
  margin: 0 6px;
}