.mask {
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;  
  background-color: rgba(0, 0, 0, 0.5);
}
.modal {
  width: 516px;
  border-radius: 24px;
  background-color: #fff;  
  padding: 60px 40px;
  box-sizing: border-box;
}
.qr {
  width: 436px;
  height: auto;  
  background-color: #f5f5f5;
}
.text {
  display: block;
  font-size: 32px;
  text-align: center;
  margin-top: 10px;
}
.close {
  width: 64px;
  height: 64px;
  position: absolute;
  bottom: 100px;
  left: 50%;
  margin-left: -32px;  
}