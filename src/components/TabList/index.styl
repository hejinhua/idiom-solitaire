.tab-bg {
  width: 188px;
  background-color: #F5F5F5;
  height: calc(100% - 26px);
  overflow-y: scroll;
  margin-top: 26px;
  margin-right: 24px;
  box-sizing: border-box;
}
.tab {
  width: 188px;
  font-size: 26px;
  color: #4C4C4C;
  background-color: #fff;
  text-align: center;
}
.tab-item {
  line-height: 78px;
  background-color: #F5F5F5;
}
.active-tab {
  background-color: #fff;  
  position: relative;
  display: block;
}
.active-tab + .tab-item {
  border-top-right-radius: 20px; 
}
.tab-text {
  display: block;
  width: 100%;
  height: 100%;
}
.active-text {
  background-color: #FFF2F2;
  color: #E0422C;
  font-weight: bold; 
  border-bottom-right-radius: 20px; 
}
.sub-item {
  background-color: #fff;
  padding: 0 38px;
  color: #4C4C4C;
}
.sub-active {
  color: #E0422C;
}
.active-img {
  position: absolute;
  left: 0;
  top: 20px;
  width: 20px;
  height: 40px;  
}
.content {
  width: 100%;
  position: absolute;
  left: 0;  
  overflow hidden
}
.series-title {
  font-size: 24px;
  line-height: 1;  
  padding-top: 32px;
  margin-bottom: 22px;
  display: flex;
  align-items: center;
  font-weight: bold;
}
.dashed-line {
  flex-grow: 1;
  height: 0;
  border-bottom: 1px dashed #E3E3E3;
  margin-left: 22px;  
}
.list-item {
  margin-top: 32px;
  color: #323334;
}
.list-item:first-child {
  margin-top: 0;
}
.list-item:last-child {
  margin-bottom: 32px;
}
.face {
  width: 172px;
  height: 172px;
  border-radius: 4px;
  overflow: hidden;
  margin-right: 15px;
  background-color: #f5f5f5;
}
.name-wrapper {
  display: flex;
}
.name {
  font-size: 28px;
  font-weight: bold;
  line-height: 40px;
}
.desc {
  margin-top: 8px;  
  font-size: 18px;
  line-height: 25px;
}
.new {
  background: url('../../assets/icons/new-tag.png') no-repeat;
  background-size: 100% 100%;
  width: 48px;
  min-width: 48px;
  height: 28px;
  margin: 6px;
  color: #fff;
  font-size: 20px;
  line-height: 28px;
  text-align: center;
}